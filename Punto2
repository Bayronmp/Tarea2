#include <iostream>

using namespace std;

int num1,num_par,num_impar,i;

int main()

{
    cout<<"ingrese su numero: ";
    cin>>num1;

    for(i=0;i<=num1;i++)
    {
        if(i%2 != 0){
            num_impar=num_impar+i;
        }
        else if(i%2 == 0){
            num_par=num_par+i;
        }
    }
    cout << "la suma de los pares es: " << num_par << endl;
    cout << "la suma de los impares es: " << num_impar << endl;

    return 0;

}
